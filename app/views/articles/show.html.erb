<p id="notice"><%= notice %></p>

<p>
  <b>Content:</b>
  <%= @article.content %>
</p>

<% if @comments.empty? %>
    <div class="alert alert-warning">there are no comments for this article</div>
<% else %>
    <div class="alert alert-success">
       <% @comments.each do |comment| %>
       <%= comment.content %>
      <% end %>
   </div>
<% end %>



<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
